bar {
  status_command i3blocks -c ~/.config/i3blocks_configs/config
  position top
  output eDP-1
  font pango: CodeNewRoman Nerd Font 10
  colors {
    background #282828
  }
}

bar {
  status_command i3blocks -c ~/.config/i3blocks_configs/config2
  position top
  output HDMI-1
  tray_output HDMI-1
  font pango: CodeNewRoman Nerd Font 10
  colors {
    background #282828
  }
}

