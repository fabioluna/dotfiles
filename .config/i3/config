client.focused          #555555 #333333 #FFFFFF #FFFFFF   #D14124

# App Window Modes
for_window [class="Pinentry-gtk-2"] floating enable

# Mapped Apps
# Browser
bindsym $mod+w exec "microsoft-edge-stable"
bindsym $mod+Shift+w exec "microsoft-edge-stable --inprivate"

# Adjust volume in PulseAudio.
# Ubuntu
#bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
#bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
#bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks

# Arch Linux
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# switch audio output, use pacmd list-cards to check profiles
bindsym $mod+F11 exec "pacmd set-card-profile 0 output:hdmi-stereo+input:analog-stereo"
bindsym $mod+F12 exec "pacmd set-card-profile 0 output:analog-stereo+input:analog-stereo"

# Mail
bindsym $mod+e exec "mailspring"

# Resource Monitor
bindsym $mod+m exec "$terminal bpytop"

# File Manager
bindsym $mod+Shift+f exec "$terminal ranger"

# redshift modes
bindsym $mod+b mode "$mode_redshift"
set $mode_redshift Set colour temperature: (r)eset, (1)4.5K, (2)4.8K, (3)5K, (4)5.3K, (5)5.5K, (6)5.8K, (7)6K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym 1 exec --no-startup-id "$kill_redshift redshift -P -O 4500", mode "default"
    bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 4800", mode "default"
    bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 5000", mode "default"
    bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 5300", mode "default"
    bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 5500", mode "default"
    bindsym 6 exec --no-startup-id "$kill_redshift redshift -P -O 5800", mode "default"
    bindsym 7 exec --no-startup-id "$kill_redshift redshift -P -O 6000", mode "default"
 
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# i3-radius
smart_borders on
smart_borders no_gaps
border_radius 1

# i3 Gaps
for_window [class=".*"] border pixel 1 #*
gaps inner 10
gaps outer 1
smart_gaps on

set $mode_gaps Gaps: (o)uter, (i)nner, (h)orizontal, (v)ertical, (t)op, (r)ight, (b)ottom, (l)eft
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_horiz Horizontal Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_verti Vertical Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_top Top Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_right Right Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_bottom Bottom Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_left Left Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym h      mode "$mode_gaps_horiz"
        bindsym v      mode "$mode_gaps_verti"
        bindsym t      mode "$mode_gaps_top"
        bindsym r      mode "$mode_gaps_right"
        bindsym b      mode "$mode_gaps_bottom"
        bindsym l      mode "$mode_gaps_left"
        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}

mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}
mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "$mode_gaps"
        bindsym Escape mode "default"
}
